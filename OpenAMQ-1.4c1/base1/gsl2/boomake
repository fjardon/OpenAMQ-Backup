# -----------------------   CHECK SOURCE FILES EXIST   ------------------------

a_check_source_files_exist() {
:
    if [ ! -f "version.h" ]; then
        croak "version.h is missing"
    fi
    if [ ! -f "gslgen.c" ]; then
        croak "gslgen.c is missing"
    fi
    if [ ! -f "gslgen.l" ]; then
        croak "gslgen.l is missing"
    fi
    if [ ! -f "ggcode.c" ]; then
        croak "ggcode.c is missing"
    fi
    if [ ! -f "ggcode.h" ]; then
        croak "ggcode.h is missing"
    fi
    if [ ! -f "ggcomm.c" ]; then
        croak "ggcomm.c is missing"
    fi
    if [ ! -f "ggeval.c" ]; then
        croak "ggeval.c is missing"
    fi
    if [ ! -f "ggfile.c" ]; then
        croak "ggfile.c is missing"
    fi
    if [ ! -f "ggfunc.c" ]; then
        croak "ggfunc.c is missing"
    fi
    if [ ! -f "ggjs.h" ]; then
        croak "ggjs.h is missing"
    fi
    if [ ! -f "ggobjt.c" ]; then
        croak "ggobjt.c is missing"
    fi
    if [ ! -f "ggstrn.c" ]; then
        croak "ggstrn.c is missing"
