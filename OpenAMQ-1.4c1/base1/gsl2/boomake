    if [ ! -f "ggmacro.gsl" ]; then
        croak "ggmacro.gsl is missing"
    fi
    if [ ! -f "ggreport.gsl" ]; then
        croak "ggreport.gsl is missing"
    fi
    if [ ! -f "gsldoc.txt" ]; then
        croak "gsldoc.txt is missing"
    fi
    if [ ! -f "prelude.def" ]; then
        croak "prelude.def is missing"
    fi
    if [ ! -f "macros.def" ]; then
        croak "macros.def is missing"
    fi
    if [ ! -f "gslgen.gif" ]; then
        croak "gslgen.gif is missing"
    fi
    if [ ! -f "im0096c.gif" ]; then
        croak "im0096c.gif is missing"
    fi
    if [ ! -f "project.pdl" ]; then
        croak "project.pdl is missing"
    fi
    if [ ! -f "readme.txt" ]; then
        croak "readme.txt is missing"
    fi
    if [ ! -f "gslgen.i" ]; then
        croak "gslgen.i is missing"
    fi
    if [ ! -f "gslgen.d" ]; then
        croak "gslgen.d is missing"
    fi
    if [ ! -f "ggcode.l" ]; then
        croak "ggcode.l is missing"
    fi
    if [ ! -f "ggcode.i" ]; then
        croak "ggcode.i is missing"
    fi
    if [ ! -f "ggcode.d" ]; then
        croak "ggcode.d is missing"
    fi
    if [ ! -f "ggcomm.h" ]; then
        croak "ggcomm.h is missing"
    fi
    if [ ! -f "ggeval.h" ]; then
