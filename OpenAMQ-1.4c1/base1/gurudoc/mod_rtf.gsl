##################################   INT   ##################################

function int (value)
    if (my.value <> 0)
        posn = 0
        len  = string.length (my.value)
        while (posn < len)
            if (string.substr (my.value, posn, , 1) = ".")
                dot = posn
                posn = len
            endif
            posn = posn + 1
        endwhile
        int_result = string.substr (my.value, 0, dot - 1,)
    else
        int_result = "0"
    endif
    return (int_result)
endfunction


