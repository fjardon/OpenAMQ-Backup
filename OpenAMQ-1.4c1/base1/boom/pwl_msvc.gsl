function msvc_source_lib_file (path)
    for build where count (compile) > 0 & count (link) = 0
        ># Begin Source File
        >
        >SOURCE=.\\$(name)
        ># End Source File
    endfor
endfunction

function msvc_generate_main_projects ()
    additional_libraries = ""
    for pdl.use
        for library
            additional_libraries += "$\(LIBDIR)\\$(library.name).lib "
        endfor
    endfor
    walk_project ("", , "msvc_generate_one_main_project")
endfunction

