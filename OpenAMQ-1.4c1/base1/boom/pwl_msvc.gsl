##################################   MAIN   #################################

function msvc_main
    win32_main ()
endfunction


##########################   BUILD BINARY FILES   ###########################

function msvc_build_binary_files
    for pdl.actions where when = "before"
        for build
            win32_handle_process_step ("")
        endfor
    endfor
    
    workspace = (pdl.acronym? pdl.name) + ".dsw"
    msvc_generate_workspace (workspace)
    if pdl.library <> ""
        msvc_generate_lib_project ()
    endif
    msvc_generate_main_projects ()

    >echo "Starting MSVC..."
    win32_command ('msdev $(workspace) /MAKE "ALL - Win32 Debug" /CLEAN')
    win32_command ('msdev $(workspace) /MAKE "ALL - Win32 Debug"')
    for pdl.actions where when = "after"
        for build
            win32_handle_process_step ("")
        endfor
    endfor
endfunction


##############################   MSVC PROJECTS   #############################

function msvc_generate_workspace (workspace)
    if pdl.library = ""
        lib_exists = 0
    else
        lib_exists = 1
        lib_project_name = pdl.library + ".dsp"
    endif
    assert_dependency ("$(workspace)", "generated")
    stream_output     ("$(workspace)")
.   template 1
Microsoft Developer Studio Workspace File, Format Version 6.00
# WARNING: DO NOT EDIT OR DELETE THIS WORKSPACE FILE!
#
#   Generated by iMatix Boom
#   http://www.imatix.com
#

.   if lib_exists
Project: "$(pdl.library)"=.\\$(lib_project_name) - Package Owner=<4>

Package=<5>
{{{
}}}

Package=<4>
{{{
}}}

.   endif
.
.   walk_project ("", , "msvc_add_main_project_to_workspace")

Global:

Package=<5>
{{{
}}}

Package=<3>
{{{
}}}
.   stream_pop ()
.   endtemplate
    msvc_generate_main_projects ()
endfunction


.macro msvc_add_main_project_to_workspace (path)
.   if file.class="public command"
Project: "$(file.basename)"=.\\$(file.basename).dsp - Package Owner=<4>

Package=<5>
{{{
}}}

Package=<4>
{{{
.       if lib_exists
    Begin Project Dependency
    Project_Dep_Name $(pdl.library)
    End Project Dependency
.       endif
}}}
.   endif
.endmacro

