# -------------------------   INSTALL DELIVERABLES   --------------------------

a_install_deliverables() {
:
    carp "Installing PCRE into $_INSTALL_ROOT..."
    if [ ! -d "$_INSTALL_ROOT" ]; then
        if mkdir -p $_INSTALL_ROOT; then
            :
        else
            croak "Could not create directory \"$_INSTALL_ROOT\""
        fi
    fi
    mkdir -p $_INSTALL_ROOT/include/
    [ "$BOOM_TRACE" ] && echo "cp pcre.h $_INSTALL_ROOT/include/"
    cp pcre.h $_INSTALL_ROOT/include/ || croak "\"cp pcre.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/pcre.h"
    chmod 0644 $_INSTALL_ROOT/include/pcre.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/pcre.h\" failed"
    mkdir -p $_INSTALL_ROOT/doc/PCRE/
    [ "$BOOM_TRACE" ] && echo "cp AUTHORS $_INSTALL_ROOT/doc/PCRE/"
    cp AUTHORS $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp AUTHORS $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/AUTHORS"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/AUTHORS || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/AUTHORS\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ChangeLog $_INSTALL_ROOT/doc/PCRE/"
    cp ChangeLog $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp ChangeLog $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/ChangeLog"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/ChangeLog || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/ChangeLog\" failed"
    [ "$BOOM_TRACE" ] && echo "cp COPYING $_INSTALL_ROOT/doc/PCRE/"
    cp COPYING $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp COPYING $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/COPYING"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/COPYING || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/COPYING\" failed"
    [ "$BOOM_TRACE" ] && echo "cp INSTALL $_INSTALL_ROOT/doc/PCRE/"
    cp INSTALL $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp INSTALL $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/INSTALL"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/INSTALL || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/INSTALL\" failed"
    [ "$BOOM_TRACE" ] && echo "cp LICENCE $_INSTALL_ROOT/doc/PCRE/"
    cp LICENCE $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp LICENCE $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/LICENCE"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/LICENCE || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/LICENCE\" failed"
    [ "$BOOM_TRACE" ] && echo "cp NEWS $_INSTALL_ROOT/doc/PCRE/"
    cp NEWS $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp NEWS $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/NEWS"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/NEWS || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/NEWS\" failed"
    [ "$BOOM_TRACE" ] && echo "cp NON-UNIX-USE $_INSTALL_ROOT/doc/PCRE/"
    cp NON-UNIX-USE $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp NON-UNIX-USE $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/NON-UNIX-USE"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/NON-UNIX-USE || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/NON-UNIX-USE\" failed"
    [ "$BOOM_TRACE" ] && echo "cp README $_INSTALL_ROOT/doc/PCRE/"
    cp README $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp README $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/README"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/README || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/README\" failed"
    mkdir -p $_INSTALL_ROOT/lib/
    [ "$BOOM_TRACE" ] && echo "cp libpcre.a $_INSTALL_ROOT/lib/"
    cp libpcre.a $_INSTALL_ROOT/lib/ || croak "\"cp libpcre.a $_INSTALL_ROOT/lib/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/lib/libpcre.a"
    chmod 0644 $_INSTALL_ROOT/lib/libpcre.a || croak "\"chmod 0644 $_INSTALL_ROOT/lib/libpcre.a\" failed"
    mkdir -p $_INSTALL_ROOT/bin/
    mkdir -p $_INSTALL_ROOT/doc/PCRE/
    [ "$BOOM_TRACE" ] && echo "cp readme.txt $_INSTALL_ROOT/doc/PCRE/"
    cp readme.txt $_INSTALL_ROOT/doc/PCRE/ || croak "\"cp readme.txt $_INSTALL_ROOT/doc/PCRE/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/PCRE/readme.txt"
    chmod 0644 $_INSTALL_ROOT/doc/PCRE/readme.txt || croak "\"chmod 0644 $_INSTALL_ROOT/doc/PCRE/readme.txt\" failed"
    if [ -f ./installer ]; then
    [ "$BOOM_TRACE" ] && echo "sh ./installer"
    sh ./installer || croak "\"sh ./installer\" failed"
    fi
}

# ----------------------   PRODUCE ALL GENERATED FILES   ----------------------

a_produce_all_generated_files() {
:
    carp "Generating files..."

        c -q -l dftables
        dftables pcre_chartables.c
    
    echo "Source files successfully generated">stamp_generate
}

# ------------------------   PRODUCE GENERATED FILES   ------------------------

a_produce_generated_files() {
:
    carp "Generating files..."

        c -q -l dftables
        dftables pcre_chartables.c
    
    echo "Source files successfully generated">stamp_generate
}

