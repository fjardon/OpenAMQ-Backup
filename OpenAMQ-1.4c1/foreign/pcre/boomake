    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_maketables"
    c $MY_COPTS pcre_maketables || croak "\"c $MY_COPTS pcre_maketables\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_ord2utf8"
