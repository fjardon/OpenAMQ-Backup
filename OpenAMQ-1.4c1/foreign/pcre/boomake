    rm -f pcre_globals.o
    rm -f pcre_info.o
    rm -f pcre_maketables.o
    rm -f pcre_ord2utf8.o
    rm -f pcre_refcount.o
    rm -f pcre_study.o
    rm -f pcre_tables.o
    rm -f pcre_try_flipped.o
    rm -f pcre_ucp_searchfuncs.o
    rm -f pcre_valid_utf8.o
    rm -f pcre_version.o
    rm -f pcre_xclass.o
    rm -f dftables.o
    rm -f dftables
    rm -f pcregrep.o
    rm -f pcregrep
    rm -f pcredemo.o
    rm -f pcredemo
    rm -f pcretest.o
    rm -f pcretest
}

