    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_ucp_searchfuncs"
    c $MY_COPTS pcre_ucp_searchfuncs || croak "\"c $MY_COPTS pcre_ucp_searchfuncs\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_valid_utf8"
    c $MY_COPTS pcre_valid_utf8 || croak "\"c $MY_COPTS pcre_valid_utf8\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_version"
    c $MY_COPTS pcre_version || croak "\"c $MY_COPTS pcre_version\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcre_xclass"
    c $MY_COPTS pcre_xclass || croak "\"c $MY_COPTS pcre_xclass\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS dftables"
    c $MY_COPTS dftables || croak "\"c $MY_COPTS dftables\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcregrep"
    c $MY_COPTS pcregrep || croak "\"c $MY_COPTS pcregrep\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcredemo"
    c $MY_COPTS pcredemo || croak "\"c $MY_COPTS pcredemo\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS pcretest"
    c $MY_COPTS pcretest || croak "\"c $MY_COPTS pcretest\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS -r libpcre pcre_chartables"
    c $MY_COPTS -r libpcre pcre_chartables || croak "\"c $MY_COPTS -r libpcre pcre_chartables\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS -r libpcre pcre_compile"
    c $MY_COPTS -r libpcre pcre_compile || croak "\"c $MY_COPTS -r libpcre pcre_compile\" failed"
