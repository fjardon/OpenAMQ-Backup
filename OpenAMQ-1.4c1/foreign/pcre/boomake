    c $MY_COPTS -r libpcre pcre_maketables || croak "\"c $MY_COPTS -r libpcre pcre_maketables\" failed"
    [ "$BOOM_TRACE" ] && echo "c $MY_COPTS -r libpcre pcre_ord2utf8"
