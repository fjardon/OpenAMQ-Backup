<pdl
    name      = "iMatix Base1"
    acronym   = "base1"
    version   = "1.2d8"
    copyright = "Copyright (c) 1996-2009 iMatix Corporation"
    workflow  = "product.pwl">

    <inherit filename = "classes.pdl" />

    <file name = "project.pdl"  class = "private resource" >Project Definition</file>
    <file name = "readme.txt"   class = "private resource" >Base top-level Read Me file</file>
    <file name = "release.txt"  class = "private resource" >Base Release Notes</file>

    <distrib name = "Base Source" type = "source">
        <project directory = "boom"      />
        <project directory = "htmlpp"    />
        <project directory = "gurudoc"   />
        <project directory = "gaggle"    />
        <project directory = "libero"    />
        <project directory = "sfl"       />
        <project directory = "smt"       />
        <project directory = "gsl2"      />
        <project directory = "gsl"       />
    </distrib>

    <distrib name = "Base Install" type = "install">
        <project directory = "boom"      />
        <project directory = "htmlpp"    />
        <project directory = "gurudoc"   />
        <project directory = "gaggle"    />
        <project directory = "libero"    />
        <project directory = "gsl"       />
    </distrib>
</pdl>
