#####################   FUNCTION GENERATE_GDL_BEFORE   ######################

function generate_gdl_before 
    g_header_level = 0
    
    body = ""
endfunction


######################   FUNCTION GENERATE_GDL_AFTER   ######################

function generate_gdl_after
    output base + ".log"
    >$(body:)
    close
endfunction


####################   FUNCTION GENERATE_HEADER_BEFORE   ####################

function generate_header_before
    g_header_level += 1

    if defined (.)
        if string.length (.) > 0
            body += .
            if    g_header_level = 1
                body += "*" * string.length (.)
            elsif g_header_level = 2
                body += "=" * string.length (.)
            elsif g_header_level = 3
                body += "-" * string.length (.)
            elsif g_header_level = 4
                body += "." * string.length (.)
            endif
            body += "\n\n"
        endif
    endif
endfunction


####################   FUNCTION GENERATE_HEADER_AFTER   #####################

function generate_header_after
    g_header_level -= 1
endfunction


##################   FUNCTION GENERATE_PARAGRAPH_BEFORE   ###################

function generate_paragraph_before
    body += string.replace (., "&lt;|<,&gt;|>") + "\n\n"
endfunction


