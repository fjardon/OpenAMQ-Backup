#####################   FUNCTION GENERATE_ITEM_BEFORE   #####################

function generate_item_before
    if name (-1) ?= "enumerate"
        list_nbr += 1
        body += list_nbr + ". "
    else
        body += "- "
    endif
    body += string.replace (., "&lt;|<,&gt;|>") + "\n"
endfunction


