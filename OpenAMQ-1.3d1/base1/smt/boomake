    fi
    if [ ! -f "smttime.c" ]; then
        croak "smttime.c is missing"
    fi
    if [ ! -f "smtecho.c" ]; then
        croak "smtecho.c is missing"
    fi
    if [ ! -f "smtlog.c" ]; then
        croak "smtlog.c is missing"
    fi
    if [ ! -f "smtxlog.c" ]; then
        croak "smtxlog.c is missing"
    fi
    if [ ! -f "smtoper.c" ]; then
