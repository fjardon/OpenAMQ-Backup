    cat ggpars.h>>gsl3.h || croak "\"cat ggpars.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggparsm.h>>gsl3.h"
    cat ggparsm.h>>gsl3.h || croak "\"cat ggparsm.h>>gsl3.h\" failed"
