        croak "ggzip.c is missing"
    fi
    if [ ! -f "ggzip.h" ]; then
        croak "ggzip.h is missing"
    fi
    if [ ! -f "ggdate.c" ]; then
        croak "ggdate.c is missing"
    fi
    if [ ! -f "ggdate.h" ]; then
        croak "ggdate.h is missing"
    fi
    if [ ! -f "ggtime.c" ]; then
        croak "ggtime.c is missing"
    fi
    if [ ! -f "ggtime.h" ]; then
        croak "ggtime.h is missing"
    fi
    if [ ! -f "ggdir.c" ]; then
        croak "ggdir.c is missing"
    fi
    if [ ! -f "ggdir.h" ]; then
        croak "ggdir.h is missing"
    fi
    if [ ! -f "ggpcre.c" ]; then
        croak "ggpcre.c is missing"
    fi
    if [ ! -f "ggpcre.h" ]; then
        croak "ggpcre.h is missing"
    fi
    if [ ! -f "ggcons.c" ]; then
        croak "ggcons.c is missing"
    fi
    if [ ! -f "ggcons.h" ]; then
        croak "ggcons.h is missing"
    fi
    if [ ! -f "ggproc.c" ]; then
        croak "ggproc.c is missing"
    fi
    if [ ! -f "ggproc.h" ]; then
        croak "ggproc.h is missing"
    fi
    if [ ! -f "gsl3.h" ]; then
        croak "gsl3.h is missing"
    fi
    if [ ! -f "stamp_generate" ]; then
        croak "stamp_generate is missing"
    fi
    if [ ! -f "configure" ]; then
        croak "configure is missing"
    fi
    if [ ! -f "Makefile.unix" ]; then
        croak "Makefile.unix is missing"
    fi
    if [ ! -f "boomake" ]; then
        croak "boomake is missing"
    fi
    if [ ! -f "configure.bat" ]; then
        croak "configure.bat is missing"
    fi
    if [ ! -f "Makefile.win32" ]; then
        croak "Makefile.win32 is missing"
    fi
    if [ ! -f "boomake.bat" ]; then
        croak "boomake.bat is missing"
    fi
}

# -------------------------   INSTALL DELIVERABLES   --------------------------

a_install_deliverables() {
:
    carp "Installing GSL into $_INSTALL_ROOT..."
    if [ ! -d "$_INSTALL_ROOT" ]; then
        if mkdir -p $_INSTALL_ROOT; then
            :
        else
            croak "Could not create directory \"$_INSTALL_ROOT\""
        fi
    fi
    mkdir -p $_INSTALL_ROOT/bin/
    [ "$BOOM_TRACE" ] && echo "cp ggobjt.gsl $_INSTALL_ROOT/bin/"
    cp ggobjt.gsl $_INSTALL_ROOT/bin/ || croak "\"cp ggobjt.gsl $_INSTALL_ROOT/bin/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/bin/ggobjt.gsl"
    chmod 0644 $_INSTALL_ROOT/bin/ggobjt.gsl || croak "\"chmod 0644 $_INSTALL_ROOT/bin/ggobjt.gsl\" failed"
    [ "$BOOM_TRACE" ] && echo "cp gsl3 $_INSTALL_ROOT/bin/"
    cp gsl3 $_INSTALL_ROOT/bin/ || croak "\"cp gsl3 $_INSTALL_ROOT/bin/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0755 $_INSTALL_ROOT/bin/gsl3"
    chmod 0755 $_INSTALL_ROOT/bin/gsl3 || croak "\"chmod 0755 $_INSTALL_ROOT/bin/gsl3\" failed"
    mkdir -p $_INSTALL_ROOT/lib/
    [ "$BOOM_TRACE" ] && echo "cp libgsl3.a $_INSTALL_ROOT/lib/"
    cp libgsl3.a $_INSTALL_ROOT/lib/ || croak "\"cp libgsl3.a $_INSTALL_ROOT/lib/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/lib/libgsl3.a"
    chmod 0644 $_INSTALL_ROOT/lib/libgsl3.a || croak "\"chmod 0644 $_INSTALL_ROOT/lib/libgsl3.a\" failed"
    mkdir -p $_INSTALL_ROOT/doc/GSL/
    [ "$BOOM_TRACE" ] && echo "cp gsldoc.txt $_INSTALL_ROOT/doc/GSL/"
    cp gsldoc.txt $_INSTALL_ROOT/doc/GSL/ || croak "\"cp gsldoc.txt $_INSTALL_ROOT/doc/GSL/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/GSL/gsldoc.txt"
    chmod 0644 $_INSTALL_ROOT/doc/GSL/gsldoc.txt || croak "\"chmod 0644 $_INSTALL_ROOT/doc/GSL/gsldoc.txt\" failed"
    mkdir -p $_INSTALL_ROOT/bin/
    mkdir -p $_INSTALL_ROOT/doc/GSL/
    [ "$BOOM_TRACE" ] && echo "cp readme.txt $_INSTALL_ROOT/doc/GSL/"
    cp readme.txt $_INSTALL_ROOT/doc/GSL/ || croak "\"cp readme.txt $_INSTALL_ROOT/doc/GSL/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/GSL/readme.txt"
    chmod 0644 $_INSTALL_ROOT/doc/GSL/readme.txt || croak "\"chmod 0644 $_INSTALL_ROOT/doc/GSL/readme.txt\" failed"
    mkdir -p $_INSTALL_ROOT/include/
    [ "$BOOM_TRACE" ] && echo "cp ggcodem.h $_INSTALL_ROOT/include/"
    cp ggcodem.h $_INSTALL_ROOT/include/ || croak "\"cp ggcodem.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggcodem.h"
    chmod 0644 $_INSTALL_ROOT/include/ggcodem.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggcodem.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggparsm.h $_INSTALL_ROOT/include/"
    cp ggparsm.h $_INSTALL_ROOT/include/ || croak "\"cp ggparsm.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggparsm.h"
    chmod 0644 $_INSTALL_ROOT/include/ggparsm.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggparsm.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggscrpm.h $_INSTALL_ROOT/include/"
    cp ggscrpm.h $_INSTALL_ROOT/include/ || croak "\"cp ggscrpm.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggscrpm.h"
    chmod 0644 $_INSTALL_ROOT/include/ggscrpm.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggscrpm.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggconv.h $_INSTALL_ROOT/include/"
    cp ggconv.h $_INSTALL_ROOT/include/ || croak "\"cp ggconv.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggconv.h"
    chmod 0644 $_INSTALL_ROOT/include/ggconv.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggconv.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggenvt.h $_INSTALL_ROOT/include/"
    cp ggenvt.h $_INSTALL_ROOT/include/ || croak "\"cp ggenvt.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggenvt.h"
    chmod 0644 $_INSTALL_ROOT/include/ggenvt.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggenvt.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggmath.h $_INSTALL_ROOT/include/"
    cp ggmath.h $_INSTALL_ROOT/include/ || croak "\"cp ggmath.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggmath.h"
    chmod 0644 $_INSTALL_ROOT/include/ggmath.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggmath.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggfile.h $_INSTALL_ROOT/include/"
    cp ggfile.h $_INSTALL_ROOT/include/ || croak "\"cp ggfile.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggfile.h"
    chmod 0644 $_INSTALL_ROOT/include/ggfile.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggfile.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggstrn.h $_INSTALL_ROOT/include/"
    cp ggstrn.h $_INSTALL_ROOT/include/ || croak "\"cp ggstrn.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggstrn.h"
    chmod 0644 $_INSTALL_ROOT/include/ggstrn.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggstrn.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggzip.h $_INSTALL_ROOT/include/"
    cp ggzip.h $_INSTALL_ROOT/include/ || croak "\"cp ggzip.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggzip.h"
    chmod 0644 $_INSTALL_ROOT/include/ggzip.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggzip.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggdate.h $_INSTALL_ROOT/include/"
    cp ggdate.h $_INSTALL_ROOT/include/ || croak "\"cp ggdate.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggdate.h"
    chmod 0644 $_INSTALL_ROOT/include/ggdate.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggdate.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggtime.h $_INSTALL_ROOT/include/"
    cp ggtime.h $_INSTALL_ROOT/include/ || croak "\"cp ggtime.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggtime.h"
    chmod 0644 $_INSTALL_ROOT/include/ggtime.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggtime.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggdir.h $_INSTALL_ROOT/include/"
    cp ggdir.h $_INSTALL_ROOT/include/ || croak "\"cp ggdir.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggdir.h"
    chmod 0644 $_INSTALL_ROOT/include/ggdir.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggdir.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggpcre.h $_INSTALL_ROOT/include/"
    cp ggpcre.h $_INSTALL_ROOT/include/ || croak "\"cp ggpcre.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggpcre.h"
    chmod 0644 $_INSTALL_ROOT/include/ggpcre.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggpcre.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggcons.h $_INSTALL_ROOT/include/"
    cp ggcons.h $_INSTALL_ROOT/include/ || croak "\"cp ggcons.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggcons.h"
    chmod 0644 $_INSTALL_ROOT/include/ggcons.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggcons.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp ggproc.h $_INSTALL_ROOT/include/"
    cp ggproc.h $_INSTALL_ROOT/include/ || croak "\"cp ggproc.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/ggproc.h"
    chmod 0644 $_INSTALL_ROOT/include/ggproc.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/ggproc.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cp gsl3.h $_INSTALL_ROOT/include/"
    cp gsl3.h $_INSTALL_ROOT/include/ || croak "\"cp gsl3.h $_INSTALL_ROOT/include/\" failed"
    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/include/gsl3.h"
    chmod 0644 $_INSTALL_ROOT/include/gsl3.h || croak "\"chmod 0644 $_INSTALL_ROOT/include/gsl3.h\" failed"
    if [ -f ./installer ]; then
    [ "$BOOM_TRACE" ] && echo "sh ./installer"
    sh ./installer || croak "\"sh ./installer\" failed"
    fi
}

# ----------------------   PRODUCE ALL GENERATED FILES   ----------------------

a_produce_all_generated_files() {
:
    carp "Generating files..."
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggcode.xml"
    gsl3 -q ggcode.xml || croak "\"gsl3 -q ggcode.xml\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggpars.xml"
    gsl3 -q ggpars.xml || croak "\"gsl3 -q ggpars.xml\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggscrp.xml"
    gsl3 -q ggscrp.xml || croak "\"gsl3 -q ggscrp.xml\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggconv.gxl"
    gsl3 -q ggconv.gxl || croak "\"gsl3 -q ggconv.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggenvt.gxl"
    gsl3 -q ggenvt.gxl || croak "\"gsl3 -q ggenvt.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggmath.gxl"
    gsl3 -q ggmath.gxl || croak "\"gsl3 -q ggmath.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggfile.gxl"
    gsl3 -q ggfile.gxl || croak "\"gsl3 -q ggfile.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggstrn.gxl"
    gsl3 -q ggstrn.gxl || croak "\"gsl3 -q ggstrn.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggzip.gxl"
    gsl3 -q ggzip.gxl || croak "\"gsl3 -q ggzip.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggdate.gxl"
    gsl3 -q ggdate.gxl || croak "\"gsl3 -q ggdate.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggtime.gxl"
    gsl3 -q ggtime.gxl || croak "\"gsl3 -q ggtime.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggdir.gxl"
    gsl3 -q ggdir.gxl || croak "\"gsl3 -q ggdir.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggpcre.gxl"
    gsl3 -q ggpcre.gxl || croak "\"gsl3 -q ggpcre.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggcons.gxl"
    gsl3 -q ggcons.gxl || croak "\"gsl3 -q ggcons.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggproc.gxl"
    gsl3 -q ggproc.gxl || croak "\"gsl3 -q ggproc.gxl\" failed"
    [ "$BOOM_TRACE" ] && echo "lr -quiet ggcode.l"
    lr -quiet ggcode.l || croak "\"lr -quiet ggcode.l\" failed"
    [ "$BOOM_TRACE" ] && echo "lr -quiet ggpars.l"
    lr -quiet ggpars.l || croak "\"lr -quiet ggpars.l\" failed"
    [ "$BOOM_TRACE" ] && echo "lr -quiet ggscrp.l"
    lr -quiet ggscrp.l || croak "\"lr -quiet ggscrp.l\" failed"
    [ "$BOOM_TRACE" ] && echo "lr -quiet ggmail.l"
    lr -quiet ggmail.l || croak "\"lr -quiet ggmail.l\" failed"
    [ "$BOOM_TRACE" ] && echo "lr -quiet ggsock.l"
    lr -quiet ggsock.l || croak "\"lr -quiet ggsock.l\" failed"
    rm -f gsl3.h
    [ "$BOOM_TRACE" ] && echo "cat gghead.h>>gsl3.h"
    cat gghead.h>>gsl3.h || croak "\"cat gghead.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggpars.h>>gsl3.h"
    cat ggpars.h>>gsl3.h || croak "\"cat ggpars.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggparsm.h>>gsl3.h"
    cat ggparsm.h>>gsl3.h || croak "\"cat ggparsm.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggscrp.h>>gsl3.h"
    cat ggscrp.h>>gsl3.h || croak "\"cat ggscrp.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggscrpm.h>>gsl3.h"
    cat ggscrpm.h>>gsl3.h || croak "\"cat ggscrpm.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggcomm.h>>gsl3.h"
    cat ggcomm.h>>gsl3.h || croak "\"cat ggcomm.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggcode.h>>gsl3.h"
    cat ggcode.h>>gsl3.h || croak "\"cat ggcode.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggcodem.h>>gsl3.h"
    cat ggcodem.h>>gsl3.h || croak "\"cat ggcodem.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggobjt.h>>gsl3.h"
    cat ggobjt.h>>gsl3.h || croak "\"cat ggobjt.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggthrd.h>>gsl3.h"
    cat ggthrd.h>>gsl3.h || croak "\"cat ggthrd.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggenvt.h>>gsl3.h"
    cat ggenvt.h>>gsl3.h || croak "\"cat ggenvt.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggfile.h>>gsl3.h"
    cat ggfile.h>>gsl3.h || croak "\"cat ggfile.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggconv.h>>gsl3.h"
    cat ggconv.h>>gsl3.h || croak "\"cat ggconv.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggmath.h>>gsl3.h"
    cat ggmath.h>>gsl3.h || croak "\"cat ggmath.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggmail.h>>gsl3.h"
    cat ggmail.h>>gsl3.h || croak "\"cat ggmail.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggsock.h>>gsl3.h"
    cat ggsock.h>>gsl3.h || croak "\"cat ggsock.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggstrn.h>>gsl3.h"
    cat ggstrn.h>>gsl3.h || croak "\"cat ggstrn.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggthrd.h>>gsl3.h"
    cat ggthrd.h>>gsl3.h || croak "\"cat ggthrd.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggzip.h>>gsl3.h"
    cat ggzip.h>>gsl3.h || croak "\"cat ggzip.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggdate.h>>gsl3.h"
    cat ggdate.h>>gsl3.h || croak "\"cat ggdate.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggtime.h>>gsl3.h"
    cat ggtime.h>>gsl3.h || croak "\"cat ggtime.h>>gsl3.h\" failed"
    [ "$BOOM_TRACE" ] && echo "cat ggdir.h>>gsl3.h"
    cat ggdir.h>>gsl3.h || croak "\"cat ggdir.h>>gsl3.h\" failed"
    echo "Source files successfully generated">stamp_generate
}

# ------------------------   PRODUCE GENERATED FILES   ------------------------

a_produce_generated_files() {
:
    carp "Generating files..."
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggcode.xml"
    gsl3 -q ggcode.xml || croak "\"gsl3 -q ggcode.xml\" failed"
    [ "$BOOM_TRACE" ] && echo "gsl3 -q ggpars.xml"
