        echo gsl/ggdir.h>>_package.lst
    fi
    if [ -f "gsl/ggpcre.c" ]; then
        echo gsl/ggpcre.c>>_package.lst
    fi
    if [ -f "gsl/ggpcre.h" ]; then
        echo gsl/ggpcre.h>>_package.lst
